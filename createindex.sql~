CREATE INDEX FirstNameIndex ON PERSONS(FIRST_NAME) INDEXTYPE IS CTXSYS.CONTEXT;
CREATE INDEX FirstNameIndex ON PERSONS(LAST_NAME) INDEXTYPE IS CTXSYS.CONTEXT;
CREATE INDEX DiagnosisIndex ON RADIOLOGY_RECORD(DIAGNOSIS) INDEXTYPE IS CTXSYS.CONTEXT;
CREATE INDEX DescriptionIndex ON RADIOLOGY_RECORD(DESCRIPTION) INDEXTYPE IS CTXSYS.CONTEXT;

CREATE SEQUENCE person_id_sequence
  MINVALUE 5000
  START WITH 5000;
  
CREATE SEQUENCE record_id_sequence
  MINVALUE 5000
  START WITH 5000;
  
CREATE SEQUENCE pic_id_sequence
  MINVALUE 5000
  START WITH 5000;
